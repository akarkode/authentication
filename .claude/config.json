{
  "model": {
    "default": "claude-sonnet-4-5-20250929",
    "temperature": 0.7
  },
  "project": {
    "name": "Authentication Service",
    "type": "python",
    "framework": "fastapi",
    "description": "FastAPI authentication service with Google OAuth 2.0, JWT tokens, and PostgreSQL/SQLite support",
    "python_version": "3.12",
    "package_manager": "poetry",
    "test_command": "poetry run pytest -v --cov=app",
    "test_watch_command": "poetry run pytest-watch",
    "lint_command": "poetry run ruff check .",
    "format_command": "poetry run ruff format .",
    "dev_server": "poetry run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "migration_create": "poetry run alembic revision --autogenerate -m",
    "migration_upgrade": "poetry run alembic upgrade head",
    "migration_downgrade": "poetry run alembic downgrade -1"
  },
  "context": {
    "include_patterns": [
      "app/**/*.py",
      "tests/**/*.py",
      "alembic/versions/*.py",
      "*.py",
      "*.md",
      "*.toml",
      "*.ini",
      "*.yml",
      "*.yaml",
      ".env.example",
      "Dockerfile",
      ".dockerignore"
    ],
    "exclude_patterns": [
      "__pycache__/**",
      ".venv/**",
      "venv/**",
      "env/**",
      "*.pyc",
      "*.pyo",
      "*.pyd",
      "*.env",
      "*.db",
      "*.sqlite*",
      "poetry.lock",
      ".pytest_cache/**",
      ".ruff_cache/**",
      ".mypy_cache/**",
      "htmlcov/**",
      ".coverage",
      "coverage.xml",
      ".tox/**",
      "dist/**",
      "build/**",
      "*.egg-info/**",
      ".git/**",
      ".github/**",
      "alembic/README",
      "alembic/script.py.mako"
    ],
    "max_file_size_kb": 500,
    "follow_symlinks": false
  },
  "testing": {
    "framework": "pytest",
    "async_mode": "auto",
    "coverage_threshold": 80,
    "test_db": "sqlite+aiosqlite:///:memory:",
    "markers": {
      "unit": "Fast unit tests without external dependencies",
      "integration": "Integration tests with multiple components",
      "slow": "Slow running tests"
    }
  },
  "development": {
    "auto_reload": true,
    "debug": false,
    "port": 8000,
    "host": "0.0.0.0"
  },
  "architecture": {
    "patterns": [
      "Repository pattern (CRUD)",
      "Dependency injection",
      "Layered architecture (router -> service -> crud -> models)",
      "OAuth 2.0 flow",
      "JWT authentication"
    ],
    "key_directories": {
      "app/src/core": "Configuration, security, and core utilities",
      "app/src/models": "SQLAlchemy database models",
      "app/src/schemas": "Pydantic validation schemas",
      "app/src/crud": "Database operations (Create, Read, Update, Delete)",
      "app/src/router": "API endpoint definitions (versioned)",
      "app/src/database": "Database session and connection management",
      "alembic": "Database migration scripts",
      "tests": "Test suite with fixtures and factories"
    },
    "conventions": {
      "imports": "Use 'from __future__ import annotations' for forward references",
      "async": "All database operations use async/await",
      "routing": "API versioning via /v1, /v2 prefixes",
      "security": "JWT tokens with access (15min) and refresh (24h) tokens"
    }
  },
  "dependencies": {
    "production": [
      "fastapi",
      "uvicorn",
      "sqlalchemy",
      "alembic",
      "pydantic",
      "pyjwt",
      "authlib",
      "httpx",
      "asyncpg",
      "aiosqlite"
    ],
    "dev": [
      "pytest",
      "pytest-asyncio",
      "pytest-cov",
      "faker",
      "factory-boy"
    ]
  },
  "ai_instructions": {
    "code_style": "Follow PEP 8, use type hints, prefer async/await for I/O operations",
    "testing": "Write tests for new features, aim for 80%+ coverage",
    "security": "Never commit secrets, validate all inputs, use parameterized queries",
    "git": "Use conventional commits with emojis, create descriptive PR titles",
    "documentation": "Add docstrings for complex functions, update README for major changes",
    "comments": "DO NOT add inline comments or code comments. Write self-documenting code with clear variable/function names. Only add docstrings for complex functions, never inline comments"
  }
}