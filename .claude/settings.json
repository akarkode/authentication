{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "The user has these custom code preferences: (1) Choose best solution only, no options (2) No comments in code (3) No explanations, just executable code (4) Prioritize: security > clean code > performance. Keep these in mind for your response."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Code written. Ensure: no comments, minimal whitespace, security-focused.'",
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(python *)",
      "Bash(pytest *)",
      "Bash(uvicorn *)",
      "Bash(ruff *)",
      "Bash(mypy *)",
      "Bash(pip list *)",
      "Bash(pip show *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git show *)",
      "Read",
      "Edit"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -r *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git pull *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git reset *)",
      "Bash(git checkout *)",
      "Bash(git cherry-pick *)",
      "Bash(git revert *)",
      "Bash(git stash *)",
      "Bash(git tag *)",
      "Bash(git branch -d *)",
      "Bash(git branch -D *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(pip install *)",
      "Bash(pip uninstall *)",
      "Bash(sudo *)",
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(eval *)",
      "WebFetch",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(./**/__pycache__/**)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Edit(./**/__pycache__/**)",
      "Read(./**/*.pyc)",
      "Read(./**/.pytest_cache/**)",
      "Read(./**/.mypy_cache/**)",
      "Read(./**/dist/**)",
      "Read(./**/*.egg-info/**)"
    ]
  }
}